<div class="mmooc-modules">
    <h2 class="h3">{{coursemodules}}</h2>
    {{#each modules}}
        <div class="mmooc-module">
            <h2 class="light"><a href="{{urlForFirstNoneCompleteItem items}}">{{name}}</a></h2>
            {{#if items}}
                <ul class="mmooc-module-items-icons">
                    {{#each items}}
                      {{#ifEquals type "SubHeader"}}
                      {{else}}
                             <li class="mmooc-module-item-icon"><a class="mmooc-module-items-icons-{{type}} {{#ifItemIsCompleted completion_requirement}}done{{/ifItemIsCompleted}}" href="{{html_url}}" title="{{title}}"><i class="icon-{{lowercase type}}{{overrideIconClassByTitle title}}"></i>{{#ifItemTypeDiscussion type}}<div class="discussion-unread-tag discussion-id-{{this.content_id}}"></div>{{/ifItemTypeDiscussion}}</a></li>
                      {{/ifEquals}}
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    {{/each}}
</div> 
